@model List<ProjectManager.Models.ProjectViewModel>
@{ 
    ViewData["Title"] = "Projects Home";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Projects</h2>
            <span>
                <a class="btn btn-info btn-lg" style="float:right;" asp-action="GetProject"
                   asp-controller="Project" asp-route-id="0"
                   asp-route-operation="Add">Add Project</a>
            </span>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var project in Model)
            {
                @Html.Partial("_ProjectDetailCardPartial", project)
            }
        </div>
    </div>
</div>


